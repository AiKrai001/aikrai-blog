---
export interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
}

const { headings } = Astro.props;
---

<div class="toc-container">
  <div class="toc-header">
    <h3>目录</h3>
  </div>
  <nav class="toc-nav">
    <ul class="toc-list">
      {headings.map((heading) => (
        <li class={`toc-item toc-level-${heading.depth}`}>
          <a href={`#${heading.slug}`} class="toc-link">
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</div>

<style>
  .toc-container {
    position: sticky;
    top: calc(var(--topbar-height) + 2rem);
    max-height: calc(100vh - var(--topbar-height) - 4rem);
    overflow-y: auto;
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-lg);
    padding: 1.5rem;
    margin-left: auto;
    width: 100%;
  }

  .toc-header {
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color);
  }

  .toc-header h3 {
    margin: 0;
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--text-color);
  }

  .toc-nav {
    font-size: var(--font-size-sm);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-item {
    margin: 0.25rem 0;
    /* 用变量控制缩进 */
    --indent: 0rem;
    /* 使用外边距实现层级缩进，确保未选中状态左右留白一致 */
    margin-left: var(--indent);
  }

  /* 各级标题缩进值（步进调小一些，更紧凑） */
  .toc-level-1 { --indent: 0rem; }
  .toc-level-2 { --indent: 0.5rem; }
  .toc-level-3 { --indent: 1rem; }
  .toc-level-4 { --indent: 1.5rem; }
  .toc-level-5 { --indent: 2rem; }
  .toc-level-6 { --indent: 2.5rem; }

  .toc-link {
    display: block;
    /* 未选中时保持左右对称的内边距 */
    padding: 0.375rem 0.75rem;
    color: var(--text-muted);
    text-decoration: none;
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
    line-height: 1.4;
    position: relative;
    z-index: 0;
  }

  .toc-link:hover {
    color: var(--primary-color);
  }

  .toc-link.active {
    color: var(--primary-color);
    font-weight: 500;
  }

  /* 使用伪元素扩展选中/悬停时的背景到左侧缩进区域 */
  .toc-link::before {
    content: "";
    position: absolute;
    left: calc(-1 * var(--indent));
    right: 0;
    top: 0;
    bottom: 0;
    border-radius: var(--border-radius);
    background: transparent;
    z-index: -1;
    transition: background var(--transition-fast);
  }

  .toc-link:hover::before,
  .toc-link.active::before {
    background: var(--hover-bg);
  }

  /* 响应式设计 */
  @media (max-width: 1199px) {
    .toc-container {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tocLinks = document.querySelectorAll('.toc-link');
    const headings = document.querySelectorAll('h1, h2, h3, h4, h5, h6');
    
    if (tocLinks.length === 0 || headings.length === 0) return;

    // 计算顶部固定栏高度（精确到像素）
    const topbarEl = document.getElementById('topbar');
    const rootFontSize = parseFloat(getComputedStyle(document.documentElement).fontSize) || 16;
    const varRem = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--topbar-height')) || 0;
    const varPx = varRem ? varRem * rootFontSize : 0;
    const topbarHeightPx = (topbarEl?.getBoundingClientRect().height || 0) || varPx || 56;

    // 创建 Intersection Observer，并考虑顶部偏移
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const id = entry.target.getAttribute('id');
        const tocLink = document.querySelector(`.toc-link[href="#${id}"]`);
        
        if (entry.isIntersecting) {
          // 移除所有活动状态
          tocLinks.forEach(link => link.classList.remove('active'));
          // 添加当前活动状态
          if (tocLink) {
            tocLink.classList.add('active');
          }
        }
      });
    }, {
      rootMargin: `-${Math.round(topbarHeightPx + 20)}px 0px -66%`,
      threshold: 0
    });

    // 观察所有标题
    headings.forEach(heading => {
      if (heading.id) {
        observer.observe(heading);
      }
    });

    // 平滑滚动至标题（考虑顶部固定栏高度）
    tocLinks.forEach(link => {
      link.addEventListener('click', function(e: Event) {
        e.preventDefault();
        const target = e.currentTarget as HTMLAnchorElement;
        const targetId = target.getAttribute('href')?.substring(1);
        const targetElement = document.getElementById(targetId || '');
        
        if (targetElement) {
          const rect = targetElement.getBoundingClientRect();
          const targetY = window.pageYOffset + rect.top - (topbarHeightPx + 12);
          window.scrollTo({ top: Math.max(0, targetY), behavior: 'smooth' });
        }
      });
    });
  });
</script>
