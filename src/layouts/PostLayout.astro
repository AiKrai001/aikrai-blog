---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import type { ImageMetadata } from 'astro';
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import TableOfContents from '../components/TableOfContents.astro';

type Props = CollectionEntry<'blog'>['data'] & {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
};

const { title, description, pubDate, updatedDate, heroImage, tags = [], categories = [], headings } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage as string | undefined}>
  <div class="post-layout">
    <!-- 主要内容区域 -->
    <main class="post-main">
      <article class="post-article">
        <!-- 文章头部 -->
        <header class="post-header">
          <h1 class="post-title">{title}</h1>
          
          <div class="post-meta">
            <div class="post-date">
              <i class="fas fa-calendar-alt"></i>
              <FormattedDate date={pubDate} />
              {updatedDate && (
                <span class="post-updated">
                  <i class="fas fa-edit"></i>
                  更新于 <FormattedDate date={updatedDate} />
                </span>
              )}
            </div>
            
            {categories.length > 0 && (
              <div class="post-categories">
                <i class="fas fa-folder"></i>
                {categories.map((category, index) => (
                  <span>
                    <a href={`/categories/${encodeURIComponent(category)}/`} class="category-link">{category}</a>
                    {index < categories.length - 1 && ', '}
                  </span>
                ))}
              </div>
            )}
          </div>
        </header>

        <!-- 文章封面图 -->
        {heroImage && (
          <div class="post-hero">
            <Image 
              src={heroImage} 
              alt={title}
              width={800}
              height={400}
              class="post-hero-image"
            />
          </div>
        )}

        <!-- 文章内容 -->
        <div class="post-content">
          <slot />
        </div>

        <!-- 文章标签 -->
        {tags.length > 0 && (
          <footer class="post-footer">
            <div class="post-tags">
              <i class="fas fa-tags"></i>
              <span class="tags-label">标签：</span>
              {tags.map((tag) => (
                <a href={`/tags/${encodeURIComponent(tag)}/`} class="tag-link">#{tag}</a>
              ))}
            </div>
          </footer>
        )}
      </article>
    </main>

    <!-- 右侧目录 -->
    {headings.length > 0 && (
      <aside class="post-toc">
        <TableOfContents headings={headings} />
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  .post-layout {
    display: grid;
    grid-template-columns: 1fr 260px;
    gap: 3rem;
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .post-main {
    min-width: 0; /* 防止内容溢出 */
  }

  .post-article {
    background-color: var(--card-bg);
    border-radius: var(--border-radius-lg);
    padding: 2.5rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-color);
  }

  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .post-title {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--text-color);
    margin: 0 0 1rem 0;
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    font-size: var(--font-size-sm);
    color: var(--text-muted);
  }

  .post-date,
  .post-categories {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .post-date i,
  .post-categories i {
    width: 1rem;
    color: var(--primary-color);
  }

  .post-updated {
    margin-left: 1rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .category-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
  }

  .category-link:hover {
    text-decoration: underline;
  }

  .post-hero {
    margin: 2rem 0;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
  }

  .post-hero-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .post-content {
    line-height: 1.7;
    color: var(--text-color);
  }

  /* 文章内容样式 */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    margin: 2rem 0 1rem 0;
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-color);
  }

  .post-content :global(h1) { font-size: 2rem; }
  .post-content :global(h2) { font-size: 1.75rem; }
  .post-content :global(h3) { font-size: 1.5rem; }
  .post-content :global(h4) { font-size: 1.25rem; }
  .post-content :global(h5) { font-size: 1.125rem; }
  .post-content :global(h6) { font-size: 1rem; }

  .post-content :global(p) {
    margin: 1rem 0;
  }

  .post-content :global(a) {
    color: var(--primary-color);
    text-decoration: none;
  }

  .post-content :global(a:hover) {
    text-decoration: underline;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin: 0.5rem 0;
  }

  .post-content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    background-color: var(--blockquote-bg);
    border-left: 4px solid var(--primary-color);
    border-radius: 0 var(--border-radius) var(--border-radius) 0;
  }

  .post-content :global(code) {
    background-color: var(--code-bg);
    color: var(--code-color);
    padding: 0.125rem 0.375rem;
    border-radius: var(--border-radius);
    font-family: var(--font-mono);
    font-size: 0.875em;
  }

  .post-content :global(pre):not([class*="ec-"]) {
    background-color: var(--code-block-bg);
    color: var(--code-block-color);
    padding: 1.5rem;
    border-radius: var(--border-radius-lg);
    overflow-x: auto;
    margin: 1.5rem 0;
    line-height: 1.5;
  }

  .post-content :global(pre:not([class*="ec-"]) code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: var(--font-size-sm);
  }

  .post-content :global(th),
  .post-content :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  .post-content :global(th) {
    font-weight: 600;
    background-color: var(--table-header-bg);
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    margin: 1rem 0;
  }

  /* 为标题设置滚动捕捉的上内边距，避免锚点被顶部导航遮挡 */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    scroll-margin-top: calc(var(--topbar-height) + 1rem);
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .post-tags {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .post-tags i {
    color: var(--primary-color);
  }

  .tags-label {
    font-weight: 500;
    color: var(--text-muted);
  }

  .tag-link {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--tag-bg);
    color: var(--tag-color);
    text-decoration: none;
    border-radius: var(--border-radius);
    font-size: var(--font-size-sm);
    transition: all var(--transition-fast);
  }

  .tag-link:hover {
    background-color: var(--primary-color);
    color: white;
    transform: translateY(-1px);
  }

  .post-toc {
    min-width: 0;
  }

  /* 响应式设计 */
  @media (max-width: 1199px) {
    .post-layout {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .post-toc {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .post-layout {
      padding: 1rem;
    }

    .post-article {
      padding: 1.5rem;
    }

    .post-title {
      font-size: 1.875rem;
    }

    .post-meta {
      font-size: var(--font-size-xs);
    }
  }
</style>
